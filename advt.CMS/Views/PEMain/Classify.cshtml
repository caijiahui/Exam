@model advt.Model.PageModel.PEModel
@{
    Layout = null;
}
<link href="~/Scripts/js/style.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.min.js"></script>
<link href="~/Scripts/theme-default/bootstrap.css" rel="stylesheet" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<style>
    .wel1, .wel2, .wel3 {
        padding: 10px 10px;
        cursor:pointer;
    }

    .wel2 {
        padding: 10px 20px;
    }

    .welcome {
        padding: 20px 0;
    }

    .welcome-grid h4 {
        font-size: 24px;
    }

    .welcome-grids {
        margin-top: 20px;
    }
</style>
<body>
    <div style="width: 100%; height:200px; background: url('../../Images/MainTitle.jpg') no-repeat;">

    </div>
    <div class="welcome w3l" style="background: white;">
        <div class="container">
            <h3>welcome</h3>
            <h3 style="font-size: 30px; color: #000000;">@Model.username</h3>
            <div class="welcome-grids" style="margin-top:50px">
                <div class="col-md-4 welcome-grid wow fadeInLeft animated" data-wow-delay=".5s" onclick="window.location.href='@Url.Action("Classify", "PEMain",new {tid="Engineering" })'">
                    <div class="wel1 hvr-bounce-to-bottom">
                        <span class="glyphicon glyphicon-glass" aria-hidden="true"></span>
                        <h4 style="letter-spacing:40px;margin-left:10px">工程管理</h4>
                        <p style="font-size:16px">Engineer Management</p>
                    </div>
                </div>
                <div class="col-md-4 welcome-grid animated wow fadeInUp animated animated" data-wow-duration="1200ms" data-wow-delay="500ms" onclick="window.location.href='@Url.Action("Classify", "PEMain",new {tid="Quality" })'">
                    <div class="wel2 hvr-bounce-to-bottom">
                        <span style="padding: 0.5em;font-size: 3em;" class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                        <h4 style="letter-spacing:40px; margin-left:10px">品质管理</h4>
                        <p style="font-size:16px">Quality Management</p>
                    </div>
                </div>
                <div class="col-md-4 welcome-grid wow fadeInRight animated" data-wow-delay=".5s" onclick="window.location.href='@Url.Action("Classify", "PEMain",new {tid="Production" })'">

                    <div class="wel3 hvr-bounce-to-bottom">
                        <span style="padding: 0.5em;font-size: 3em;" class="glyphicon glyphicon-signal" aria-hidden="true"></span>
                        <h4 style="letter-spacing:40px;margin-left:10px">生产管理</h4>
                        <p style="font-size:16px">Production Management</p>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>

</body>


